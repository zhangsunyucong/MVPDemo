<?xml version="1.0" encoding="utf-8"?>
<com.example.librarys.autowidget.AutoToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:subtitleTextAppearance="@style/ToolbarSubTitleTextAppearance"
    app:theme="@style/ToolBarMenuStyle"
    app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:background="@color/colorPrimaryDark">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="94px">


        <ImageView
            android:id="@+id/img_left"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:padding="24px"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:src="@mipmap/ic_left_back"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题栏"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_px" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#393A3F"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common_px"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:src="@mipmap/ic_add"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.example.librarys.autowidget.AutoToolbar>