<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.librarys.RippleView
            android:id="@+id/rip_vitae"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_vitae"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="我的简历"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>

        </com.example.librarys.RippleView>

        <View
            style="@style/Line"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            />

        <com.example.librarys.RippleView
            android:id="@+id/rip_browser"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_browser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="浏览器"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>

        </com.example.librarys.RippleView>

        <View
            style="@style/Line"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            />

        <com.example.librarys.RippleView
            android:id="@+id/rip_photo"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="照片墙"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>

        </com.example.librarys.RippleView>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.librarys.RippleView
            android:id="@+id/rip_clear_cache"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="清除数据"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>


        </com.example.librarys.RippleView>

        <View
            style="@style/Line"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            />

        <com.example.librarys.RippleView
            android:id="@+id/rip_feedback"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="意见反馈"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>


        </com.example.librarys.RippleView>

        <View
            style="@style/Line"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            />

        <com.example.librarys.RippleView
            android:id="@+id/rip_about"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="关于"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>


        </com.example.librarys.RippleView>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.librarys.RippleView
            android:id="@+id/rip_logout"
            style="@style/rippleViewStyle"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_common"
                android:text="退出"
                android:gravity="center_vertical"
                android:textColor="@color/black0"
                android:textSize="@dimen/text_size_common_px"
                android:paddingLeft="40px"/>


        </com.example.librarys.RippleView>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>